<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_produto_tree" model="ir.ui.view">
            <field name="name">produto.tree</field>
            <field name="model">estoque.produto</field>
            <field name="arch" type="xml">
                <list string="Produto">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="category"/>
                    <field name="standard_price"/>
                </list>
            </field>
        </record>

        <record id="view_produto_form" model="ir.ui.view">
            <field name="name">produto.form</field>
            <field name="model">estoque.produto</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="description"/>
                            <field name="category"/>
                            <field name="standard_price"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_produto" model="ir.actions.act_window">
            <field name="name">Produtos</field>
            <field name="res_model">estoque.produto</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_produto_pd_root"
                  name="GestÃ£o de Produtos"
                  sequence="2"
                  parent="menu_estoque_pd_root"
                  action="action_produto"/>

    </data>
</odoo>